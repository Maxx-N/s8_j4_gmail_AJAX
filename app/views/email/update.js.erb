if (<%= @email.read === false %>) {
    document.getElementById("object-<%= @email.id %>").childNodes[1].classList.remove("text-dark");
    document.getElementById("read-btn").childNodes[1].childNodes[1].classList.remove("btn-info");
    document.getElementById("read-btn").childNodes[1].childNodes[1].classList.add("btn-success");
    document.getElementById("read-btn").childNodes[1].childNodes[1].value = "Marquer comme lu";
} else {
    document.getElementById("object-<%= @email.id %>").childNodes[1].classList.add("text-dark");
    document.getElementById("read-btn").childNodes[1].childNodes[1].classList.remove("btn-sucess");
    document.getElementById("read-btn").childNodes[1].childNodes[1].classList.add("btn-info");
    document.getElementById("read-btn").childNodes[1].childNodes[1].value = "Marquer comme non lu";
};


