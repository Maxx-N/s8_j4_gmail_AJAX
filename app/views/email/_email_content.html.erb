<div id="content-<%= email.id %>">
  <h2 class="text-center">
    <%= email.object %>
  </h2>
    <hr><br>
  <p>
    <%= email.body %>
  </p>
  <br>
  <div class="row">
    <% if email.read === true %>
      <button id="read-btn" class="col-sm btn-info"><%= link_to "Marquer comme non-lu", email_path(email.id), method: :put, :class => "text-light", remote: true %></button>
    <% else %>
      <button id="read-btn" class="col-sm btn-success"><%= link_to "Marquer comme lu", email_path(email.id), method: :put, :class => "text-light", remote: true %></button>
    <% end %> 
    <button class="col-sm btn-danger"><%= link_to "Supprimer", email_path(email.id), method: :delete, :class => "text-light", remote: true %></button>
  </div>

</div>